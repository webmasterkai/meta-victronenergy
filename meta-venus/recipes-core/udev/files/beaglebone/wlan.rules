# built-in wifi
ACTION=="add", ENV{DEVTYPE}=="wlan", ENV{ID_BUS}=="usb", ATTRS{removable}=="fixed", PROGRAM="wlan-rename", NAME="%c"

# external wifi
ACTION=="add", ENV{DEVTYPE}=="wlan", ENV{ID_BUS}=="usb", ATTRS{removable}=="removable", RUN+="wlan-update"
ACTION=="remove", ENV{DEVTYPE}=="wlan", RUN+="wlan-update"
